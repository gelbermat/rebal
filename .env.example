# Основные настройки приложения
APP_NAME=Rebalancer
VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# API настройки
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# CORS настройки
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
CORS_CREDENTIALS=true

# Настройки базы данных (используя nested delimiter __)
DATABASE__URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rebalancer
DATABASE__ECHO=false
DATABASE__POOL_SIZE=10
DATABASE__MAX_OVERFLOW=20

# Настройки MOEX API
MOEX__API_URL=https://iss.moex.com
MOEX__TIMEOUT=30
MOEX__RATE_LIMIT=100
MOEX__RETRIES=3

# Настройки брокера
BROKER__API_URL=
BROKER__API_KEY=
BROKER__API_SECRET=
BROKER__ACCOUNT_ID=
BROKER__SANDBOX_MODE=true

# Настройки планировщика
SCHEDULER__ENABLED=true
SCHEDULER__TIMEZONE=Europe/Moscow

# НОВЫЕ НАСТРОЙКИ: Режим торгов MOEX
# trading_mode: '24/7' (круглосуточно) или 'business_days' (пн-пт)
SCHEDULER__TRADING_MODE=24/7

# Настройки для режима 24/7 (каждый день)
SCHEDULER__MARKET_DATA_SYNC_HOUR_24_7=19
SCHEDULER__MARKET_DATA_SYNC_MINUTE_24_7=0

# Настройки для режима рабочих дней (пн-пт)
SCHEDULER__MARKET_DATA_SYNC_HOUR_BUSINESS=18
SCHEDULER__MARKET_DATA_SYNC_MINUTE_BUSINESS=0

# Устаревшая настройка (deprecated, используйте trading_mode)
SCHEDULER__MARKET_DATA_SYNC_CRON=0 19 * * *
SCHEDULER__REBALANCING_CRON=0 10 * * 1

# Настройки логирования
LOGGING__LEVEL=INFO
LOGGING__FILE_PATH=logs/rebalancer.log
LOGGING__MAX_FILE_SIZE=10485760
LOGGING__BACKUP_COUNT=5

# Настройки безопасности
SECURITY__SECRET_KEY=your-super-secret-key-change-in-production
SECURITY__ALGORITHM=HS256
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY__REFRESH_TOKEN_EXPIRE_DAYS=7

# Настройки отчетности
REPORTING__MAX_REPORT_HISTORY=100
REPORTING__DEFAULT_DATE_RANGE_DAYS=30
REPORTING__CACHE_REPORTS=true
REPORTING__CACHE_TTL_MINUTES=15
